extends ../../layout

- var d = data
- var a = assessment

block content
  h1= title
  p Welcome to #{title}

  table.indextable
    tr
      th &nbsp;
      each s in data
        each t in s.tests
          th= s.LastName + ', ' + s.FirstName + ': ' + s.StudentID
          
    tr
      th Test
      each s in data
        each val,key in s.tests
          th= key
      
    each subject in ['Reading','Listening','Writing','Speaking']
      - var section = 'A1' + subject
      tr
        th= subject
        each s in data
          each t in s.tests
            th &nbsp;
      each val,key in assessment[section]
        tr
          td= key
