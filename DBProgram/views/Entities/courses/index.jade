extends ../../layout

block content

  h1= title
  p Welcome to #{title}

  - var courses = data
  a(href='/courses/create') Create Course
  table.indextable
    tr
      th ID
      th TeacherID
      th CourseName
      th TimeHeld
      th Delete
    - each course in courses
      tr
        td= course.ID
        td= course.TeacherID
        td= course.CourseName
        td= course.TimeHeld
        td  
            button(onClick="myfunction")
              fu Delete
              //for some reason the button doesn't use the first word