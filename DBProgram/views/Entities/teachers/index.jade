extends ../../layout

block content
  h1 Teachers

  - var teachers = data
  
  a(href='/teachers/create') Create Teacher Profile
  a(href='/teachers/update') Update Teacher Profile
  a(href='/teachers/delete') Delete Teacher Profile
  
  table.indextable
    tr
      th ID
      th First Name
      th Middle Initial
      th Last Name
      th Email
      th Phone Number

      
    - each teacher in teachers
      tr
        td= teacher.ID
        td= teacher.FirstName
        td= teacher.MiddleInitial
        td= teacher.LastName
        td= teacher.Email
        td= teacher.PhoneNumber

  